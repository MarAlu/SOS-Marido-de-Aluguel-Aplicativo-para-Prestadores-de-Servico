<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ccc"
    android:orientation="vertical"
    android:padding="10dp">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/viewNotaTVS"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:gravity="center"
                android:text="4.7"
                android:textColor="#000000"
                android:textSize="46sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/viewNomeTVS"
                android:layout_width="0dp"
                android:layout_height="26dp"
                android:layout_marginTop="4dp"
                android:text="NOME"
                android:gravity="center"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/viewNotaTVS"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/viewAreaTVS"
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="ÁREA"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/viewNotaTVS"
                app:layout_constraintTop_toBottomOf="@+id/viewNomeTVS" />

            <TextView
                android:id="@+id/viewDescTVS"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="DESCRIÇÃO"
                android:textColor="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/viewNotaTVS"
                app:layout_constraintTop_toBottomOf="@+id/viewAreaTVS" />

            <TextView
                android:id="@+id/viewStatusTVS"
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="STATUS"
                android:textColor="#000000"
                app:layout_constraintBottom_toTopOf="@+id/viewDescTVS"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewNomeTVS"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>